#include <stdio.h>
#include <stdlib.h>
#define flush()  {fflush(stdin);fflush(stdout);}
void task1(){
typedef struct {
	char name[20];
	int roll;
	float marks;
}student;

student s ={0};
printf("Please enter student data\n");
printf("Student Name : ");
flush();
scanf("%s",s.name);
printf("Enter Student roll :\n");
flush();
scanf("%d",&s.roll);
printf("Enter student marks : ");
flush();
scanf("%f",&s.marks);
printf("------------------");
}
int main(void) {


	task1();
	return EXIT_SUCCESS;
}
