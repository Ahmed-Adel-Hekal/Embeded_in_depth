#include <stdio.h>
#include <stdlib.h>

void task1(){
typedef struct {
	char name[20];
	int roll;
	float marks;
}student;

student s ={0};
printf("Please enter student data\n");
printf("Student Name : ");
scanf("%s",&s.name);
printf("Enter Student roll :\n");
scanf("%f",&s.roll);
printf("Enter student marks : ");
printf("%[-]*10");
}
int main(void) {


	task1();
	return EXIT_SUCCESS;
}
